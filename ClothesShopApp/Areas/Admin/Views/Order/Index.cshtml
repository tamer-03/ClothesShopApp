@{

    Layout = "_AdminLayout";
    @model List<ClothesShopApp.Data.ViewModels.AdminOrderUserItemsViewModel>
    var count = 1;
}
<div style="margin-left:60px;margin-right:60px;">
    <div>Kullanıcı Siparişleri</div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Sipariş ID</th>
                <th>Kullanıcı</th>
                
                <th>Sipariş Tarihi</th>
                <th>Toplam Fiyat</th>
                <th>Durum</th>
                

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {


                <tr>
                    <td>@count</td>
                    <td>@item.OrderId</td>
                    <td>@item.User.name  @item.User.lastName</td>
                    <td>@item.OrderDate</td>
                    <td>@item.TotalPrice</td>
                    <td style="color:forestgreen">@item.OrderStatus</td>
                    <form asp-action="OrderDetail" method="post">
                        <input type="hidden" name="id" value="@item.OrderId" />
                        <td><button type="submit" class="btn btn-primary">Görüntüle</button></td>
                    </form>
                    

                </tr>

                count++;


            }

        </tbody>
    </table>

</div>
    <script>
        $(document).ready(function () {
            // Event handler for sorting links
            $(".filter-link").on("click", function (e) {
                e.preventDefault();

                // Get sorting or filtering values from the clicked link
                let sortOrder = $(this).data("sort");
                let minPrice = $(this).data("minprice");
                let maxPrice = $(this).data("maxprice");

                // Load products based on the selected sorting/filtering option
                loadProducts(sortOrder, minPrice, maxPrice);
            });
            function generateStars(averageRating) {
                let starsHtml = '';

                // Dolu yıldızlar ve yarım yıldızları oluştur
                for (let i = 1; i <= 5; i++) {
                    if (i <= Math.floor(averageRating)) {
                        starsHtml += '<span class="fa fa-star checked"></span>'; // Dolu yıldız
                    } else if (i === Math.ceil(averageRating) && averageRating % 1 !== 0) {
                        starsHtml += '<span class="fa fa-star-half-o half-star"></span>'; // Yarım yıldız
                    } else {
                        starsHtml += '<span class="fa fa-star empty-star"></span>'; // Boş yıldız
                    }
                }

                return starsHtml;
            }

            function loadProducts(sortOrder, minPrice, maxPrice) {
                let categoryId = '@ViewBag.SelectedCategoryId';
                $.ajax({
                    url: '/WebPage/Product/GetProducts',  // Update with your correct URL
                    type: 'GET',
                    data: {
                        sortOrder: sortOrder,
                        minPrice: minPrice,
                        maxPrice: maxPrice,
                        categoryId: categoryId,
                    },
                    success: function (products) {
                        // Clear the current products
                        $(".isotope-grid").empty();
                        console.log("succes");
                        
                        
                        // Iterate over the products and append them to the product grid
                        products.forEach(product => {
                            let pictureUrls = product.pictureUrl
                            let url = pictureUrls[0];
                            console.log(url);
                            console.log(product);
                            console.log(product.averageRating);
                            let productHtml = `
                                                <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
                                                    <a href="/WebPage/Product/ProductDetail?productId=${product.productId}">
                                                        <div class="block2">
                                                            <div class="block2-pic hov-img0">
                                                                <img src="/images/${url}" alt="IMG-PRODUCT">
                                                            </div>
                                                            <div class="block2-txt flex-w flex-t p-t-14">
                                                                <div class="block2-txt-child1 flex-col-l">
                                                                    <a href="/WebPage/Product/ProductDetail?productId=${product.productId}" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                                                        ${product.name}
                                                                    </a>
                                                                    <span class="stext-105 cl3">
                                                                        $${product.price}
                                                                    </span>
                                                                </div>
                                                                        <div class="product-rating">
                                                        <span>${product.averageRating}</span>
                                                               ${generateStars(product.averageRating)}
                                                                <span>(${product.totalReview})</span>

                                            </div>
                                                                <div class="block2-txt-child2 flex-r p-t-3">
                                                                    <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                                                                        <img class="icon-heart1 dis-block trans-04" src="../template/images/icons/icon-heart-01.png" alt="ICON">
                                                                        <img class="icon-heart2 dis-block trans-04 ab-t-l" src="../template/images/icons/icon-heart-02.png" alt="ICON">
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </a>
                                                </div>`;
                            // Append the product HTML to the grid
                            $(".isotope-grid").append(productHtml);
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error("Error loading products: ", error);
                    }
                });
            }
        });


    </script>

